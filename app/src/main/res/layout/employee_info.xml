<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintVertical_chainStyle="packed">

    <TextView
        android:id="@+id/e_name"
        style="@style/HeaderStyle"
        android:text="Иванова Мария Ивановна"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/e_experience"
        style="@style/DescribtionStyle"
        android:text="Стаж 8 лет"
        app:layout_constraintStart_toEndOf="@id/e_name"
        app:layout_constraintTop_toBottomOf="@id/e_name" />

    <RadioButton

        android:id="@+id/e_status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:checked="true"
        android:clickable="false"

        android:text="online"
        android:theme="@style/myRadio"
        app:layout_constraintEnd_toEndOf="@+id/e_name"
        app:layout_constraintTop_toBottomOf="@+id/e_name" />

    <TextView
        android:id="@+id/e_position"
        style="@style/TextStyle"
        android:text="Ведущий инженер-программист"
        app:layout_constraintStart_toEndOf="@id/e_experience"
        app:layout_constraintTop_toBottomOf="@id/e_experience" />

    <TextView
        android:id="@+id/e_position_describtion"
        style="@style/DescribtionStyle"
        android:text="Разработка Android.\nМенеджер продукта Android. "
        app:layout_constraintStart_toEndOf="@+id/e_position"
        app:layout_constraintTop_toBottomOf="@+id/e_position" />
</androidx.constraintlayout.widget.ConstraintLayout>